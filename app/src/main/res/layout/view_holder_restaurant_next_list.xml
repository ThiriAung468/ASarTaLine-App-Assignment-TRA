<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    card_view:cardElevation="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_next_resturant"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/next_restaurant" />

        <TextView
            android:id="@+id/tv_next_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_toRightOf="@+id/iv_next_resturant"
            android:text="Casa Pop"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_3x" />

        <TextView
            android:id="@+id/tv_next_cafe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_next_title"
            android:layout_below="@+id/tv_next_title"
            android:text="Cafe Italian, Chinese"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_next_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_next_cafe_title"
            android:layout_below="@+id/tv_next_cafe_title"
            android:text="Cost $300 for one"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_next_resturant"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="View details"
            android:textColor="@color/red"
            android:textSize="@dimen/text_regular" />

    </RelativeLayout>
</android.support.v7.widget.CardView>